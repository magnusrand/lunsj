<% if (companies.length === 0) { %>
  <p class="empty-text">Ingen treff. Pr&#248;v et annet s&#248;keord.</p>
<% } else { %>
  <p class="sr-only"><%= companies.length %> resultat<%= companies.length !== 1 ? 'er' : '' %> funnet</p>
  <ul class="search-results" role="listbox">
    <% companies.forEach((company, index) => { %>
      <%- include('partials/company-result', { company, index }) %>
    <% }) %>
  </ul>
<% } %>
<button
  class="manual-add-btn"
  hx-get="/api/manuell-kantine"
  hx-target="#search-results"
  hx-indicator="#search-spinner"
>
  <span class="manual-add-title">Legg til kantine manuelt</span>
  <span class="manual-add-subtitle">Skriv inn adressen selv</span>
</button>
