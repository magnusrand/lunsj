{
  "functions": {
    "source": "server",
    "runtime": "nodejs18",
    "region": "europe-west1"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "firebase.storage.rules"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5002
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  },
  "hosting": {
    "public": ".",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/lunchplaces",
        "function": {
          "functionId": "getLunchPlacesList",
          "region": "europe-west1"
        }
      },
      {
        "source": "/api/lunchplace",
        "function": {
          "functionId": "addLunchPlaceAPI",
          "region": "europe-west1"
        }
      },
      {
        "source": "/api/rating",
        "function": {
          "functionId": "addRatingAPI",
          "region": "europe-west1"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
